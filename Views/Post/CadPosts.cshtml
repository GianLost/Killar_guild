@using Microsoft.AspNetCore.Http;
@model Post

@{
    ViewData["Title"] = "Cadastro";
}

<body>

    <main role="main" class="body-post img-fluid">

        <div class="row justify-content-md-center cadpost">

            <!--<img class="img-fluid" src="../Imagens/post-fundo-.png" alt="">-->

            <div class="jumbotron col-md-6 col-lg-6 col-sm-12 jumb">
                <h2 class="mb-4 mr-5">Crie seu Post</h2>
                <div class="">

                    <form id="frmCadastro" asp-controller="Post" asp-action="CadPosts" method="post">

                        <p>
                            <input class="form-control btn-block" type="text" placeholder="TÃ­tulo" asp-for="Titulo" required/>
                        </p>

                        <p>
                            <textarea class="form-control btn-block" placeholder="Insira seu Texto" asp-for="Texto" cols="40" rows="5" required></textarea>
                        </p>

                        <p>

                            <input class="form-control btn-block" placeholder="Data" asp-for="DataPost" required/>

                        </p>

                        <input value=@Context.Session.GetInt32("IdUsuario") type="hidden" asp-for="UsuarioId">
                        <input type="hidden" name="Id" asp-for="Id">
                        <input type="hidden" name="UsuarioId" asp-for="UsuarioId">
                        <button class="btn btn-primary btn-lg mt-5 but-post" type="submit">Postar</button>

                    </form>

                </div>

            </div>

        </div>

    </main>

</body>
