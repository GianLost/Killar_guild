@model Post
@{
    ViewData["Title"] = "Exclusão de Post";
}

<div class="container">

    <div class="mt-5">

        <h2>Exclusão de registro</h2>
        <p>Esta ação excluirá o post <strong>@Model.Titulo</strong> e a operação não poderá ser desfeita</p>
        <p>Deseja mesmo excluir?</p>

    </div>

    <form asp-action="DelPost" method="POST">
        <input type="hidden" asp-for="Id" />
        <button type="submit" name="decisao" value="n">Não</button>
        <button type="submit" name="decisao" value="s">Sim</button>
    </form>

</div>