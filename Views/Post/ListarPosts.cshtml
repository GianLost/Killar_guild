@model ICollection<Post>

@{
    ViewData["Title"] = "Cadastro";
}

<body class="text-justify">

    <main role="main">

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-12 col-sm-4 lista-user">

                    <h2>Listagem de Posts</h2>

                    @if (Model != null)
                    {
                        <table id="tblPosts" class="table table-striped table-responsive table-dark">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Data</th>
                                    <th>Nº de comentários</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Post item in Model)
                                {
                                    <tr>
                                        <td>@item.Titulo</td>
                                        <td>@item.DataPost</td>
                                        <td>@(item.Comentarios == null ? 0 : item.Comentarios.Count())</td>
                                        <td><a href="UpdatePost?id=@item.Id">Editar</a> | <a href="DelPost?id=@item.Id">Excluir</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </main>
</body>